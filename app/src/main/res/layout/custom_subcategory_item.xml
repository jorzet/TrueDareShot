<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
	
	<TextView
			android:id="@+id/tv_subcategory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="40dp"
			android:layout_marginLeft="400dp"
			android:textColor="@android:color/black"
			android:textSize="20sp"
			android:text="Inocentes"/>
	
	<android.support.text.emoji.widget.EmojiTextView
			android:id="@+id/iv_subcategory_emoji"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:ems="10"
			android:hint="Enter emoji text"
			android:inputType="textPersonName"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@+id/tv_subcategory"
			android:layout_toEndOf="@+id/tv_subcategory"/>
	
	<Switch
			android:id="@+id/sw_subcategory_config"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_marginEnd="40dp"
			android:layout_marginRight="40dp">
	</Switch>


</RelativeLayout>